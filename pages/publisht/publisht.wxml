<form bindsubmit="addTopic">
     <view class="section section_gap">
    <view class="section__title">主题:</view>
    <input name="theme" placeholder="主题" />
    </view>
    <view class="section section_gap">
    <view class="section__title">标题:</view>
    <input name="title" placeholder="标题" />
    </view>
    <view class="section section_gap">
    <view class="section__title">内容:</view>
    <input name="detail" placeholder="内容" />
    </view>
        <view class="shangchuan" bindtap="addpicture">
       <image style="width:100%;height:100%;" src="{{src}}">
       </image>
     </view>
  
  <view class="btn-area section_gap">
    <button formType="submit" >发布</button>
  </view>
</form>